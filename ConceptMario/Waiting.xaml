<Window x:Class="ConceptMario.Waiting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConceptMario"
        mc:Ignorable="d"
        Title="Matchmaking" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Height="300" Width="300">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Waiting for player to join" FontSize="20" HorizontalContentAlignment="Center" FontWeight="Medium"  FontStyle="Italic" VerticalContentAlignment="Top"/>
        <Label Content="Online players:" FontSize="20" HorizontalContentAlignment="Center" FontWeight="Medium"  FontStyle="Italic" VerticalContentAlignment="Top" Grid.Row="1" Margin="0,0,0,50"/>
        <Label x:Name="PlayersOnline" Content="0" FontSize="20" HorizontalContentAlignment="Center" FontWeight="Medium"  FontStyle="Italic" VerticalContentAlignment="Top" Grid.Row="1" Margin="0,50,0,0"/>
        <Button Content="Exit" x:Name="BtnExit" Margin="50,10" Width="100" Click="btnClose_Click_1" Background="#80ff00" Foreground="Black" BorderBrush="White" Grid.Row="2"/>
    </Grid>
</Window>
