<Window x:Class="ConceptMario.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConceptMario"
        mc:Ignorable="d"
        Title="Menu" Height="480" Width="720">
    <Grid Height="250" Width="200">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Play" x:Name="btnPlay" Margin="2,10" Width="100" Click="btnPlay_Click_1" Background="#80ff00" Foreground="Black" BorderBrush="White"/>
        <Button Content="Shop" x:Name="btnShop" Margin="50,10" Width="100" Click="btnShop_Click_1" Background="#80ff00" Foreground="Black" BorderBrush="White" Grid.Row="1"/>
        <Button Content="Exit" x:Name="btnExit" Margin="50,10" Width="100" Click="btnClose_Click_1" Background="#80ff00" Foreground="Black" BorderBrush="White" Grid.Row="2"/>
    </Grid>
</Window>
